{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "noEmit": false,
    "isolatedModules": true,
    "typeRoots": ["./src/@types", "./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["./src/server.ts", "./src/@types/express","./src/**/*"]
}
